@model TicketSystemWeb.Models.LoginViewModel

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 rounded" style="width: 400px; background-color: #f8f9fa;">
        <h2 class="text-center text-primary mb-4">Login</h2>

        <form asp-action="Login" method="post">
            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label text-dark"></label>
                <input asp-for="Username" class="form-control" placeholder="Enter your username" />
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label text-dark"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
            </div>

            <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>
    </div>
</div>
