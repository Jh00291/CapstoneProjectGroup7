<Window x:Class="TicketSystemDesktop.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="250" Width="236">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Username" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Password" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,20"/>

            <Button Content="Login" Width="100" HorizontalAlignment="Center" Click="Login_Click"/>
            <TextBlock x:Name="LoginStatus" Foreground="Red" TextAlignment="Center" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
