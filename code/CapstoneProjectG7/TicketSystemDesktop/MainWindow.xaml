<Window x:Class="TicketSystemDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ticket System" Height="500" Width="410">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Welcome message -->
            <RowDefinition Height="*"/>
            <!-- Ticket lists -->
        </Grid.RowDefinitions>

        <!-- Welcome message -->
        <TextBlock x:Name="WelcomeText"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"
                   Grid.Row="0"
                   Text="Welcome!" />

        <StackPanel Grid.Row="1" Margin="10">

            <!-- Filter CheckBox -->
            <CheckBox x:Name="MyTicketsOnlyCheckBox"
              Content="Show only my assigned tickets"
              Margin="0,0,0,10"
              Checked="MyTicketsOnlyCheckBox_Changed"
              Unchecked="MyTicketsOnlyCheckBox_Changed"/>

            <!-- Unified Ticket List -->
            <ListBox x:Name="UnifiedTicketsList"
             DisplayMemberPath="Title"
             Height="350"
             ToolTip="Double-click to view details"
             MouseDoubleClick="TicketList_DoubleClick"/>

        </StackPanel>

        <Button Content="Logout"
        Width="75"
        HorizontalAlignment="Right"
        Click="Logout_Click"
        Margin="0,3,10,7"
        Grid.Row="0"/>
    </Grid>
</Window>
